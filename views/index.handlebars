<!-- Link to other pages -->
<div class="uk-flex">
    <div class=""><a href="/" class="uk-button uk-button-default uk-text-success category-buttons">View All Recipes</a>
    </div>
    <div class="uk-margin-left"><a href="/category/Appetizer"
            class="uk-button uk-button-default category-buttons">Appetizers</a></div>
    <div class="uk-margin-left"><a href="/category/Breakfast"
            class="uk-button uk-button-default category-buttons">Breakfast</a></div>
    <div class="uk-margin-left"><a href="/category/Lunch" class="uk-button uk-button-default category-buttons">Lunch</a>
    </div>
</div>

<!-- Add a recipe button -->
<div class="add-recipe-container">
    <a href="/addRecipe" class="uk-button uk-button-primary" id="add-recipe">+ Add a Receipe</a>
</div>

<!-- Recipe Grid -->
<div class="uk-text-center">
<div class="uk-flex-center" uk-grid>
    {{#each recipes as |recipe|}}
    <div class="uk-card ">
        {{> recipe-info recipe }}
    </div>
    {{/each}}
</div>
</div>
