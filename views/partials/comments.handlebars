{{#each this}}
<div class="comments uk-margin uk-comment-primary">
    <header class="uk-comment-header">
        <div class="uk-grid-medium uk-flex-middle" uk-grid>
            <div class="uk-width-auto">
                <img class="uk-comment-avatar" src="https://getuikit.com/docs/images/avatar.jpg" width="40" height="40" alt="">
            </div>
            <div class="uk-width-expand">
                <h4 class="uk-comment-title uk-margin-remove">Author</h4>
                <ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top">
                    <li>{{format_date created_at}}</li>
                </ul>
            </div>
        </div>
    </header>
    <div class="uk-comment-body">
        <p>{{comment_text}}</p>
    </div>
    </article>

</div>{{/each}}